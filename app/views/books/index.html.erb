<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<h1>Books</h1>
<table>
    <tr>
		<th>
			Title
		</th>
		<th>
			Body
		</th>
	</tr>

<% @books.each do |book| %>

	<tr>
	    <td>
		    <%= book.title %>
	    </td>
	    <td>
		    <%= book.body %>
	    </td>
	    <td>
	    	<%= link_to 'Show', book_path(book.id) %>
	    </td>
	    <td>
	    	<%= link_to 'Edit', edit_book_path(book.id) %>
	    </td>
	    <td>
	    	<%= link_to 'Destroy', book_path(book.id), method: :delete, data: { confirm: "Are you sure?" } %>
	    </td>
	</tr>
<% end %>
</table>

<h2>New Book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<div class="field">
    
    <label>Title</label>
    <%= f.text_field :title %>

</div>
<div class="field">
 
    <label>Body</label>
    <%= f.text_area :body %>

</div> 
<div class="actions"><%= f.submit %></div>
 
<% end %>

