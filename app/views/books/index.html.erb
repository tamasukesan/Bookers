<h1>Books</h1>
<table>
    <tr>
		<th>
			Title
		</th>
		<th>
			Body
		</th>
	</tr>

<% @books.each do |book| %>

	<tr>
	    <td>
		    <%= book.title %>
	    </td>
	    <td>
		    <%= book.body %>
	    </td>
	    <td>
	    	<%= link_to 'Show', book_path(book.id) %>
	    </td>
	    <td>
	    	<%= link_to 'Edit', edit_book_path(book.id) %>
	    </td>
	    <td>
	    	<%= link_to 'Destroy', book_path(book.id), method: :delete, data: { confirm: "Are you sure?" } %>
	    </td>
	</tr>
<% end %>
</table>

<h1>New Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
 
    <div>Title</div>
    <%= f.text_field :title %>
 
    <div>Body</div>
    <%= f.text_area :body %><br><br>
 
    <%= f.submit %>
 
<% end %>

