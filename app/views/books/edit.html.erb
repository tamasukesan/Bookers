<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
 
    <div class="field">Title<br>
    <%= f.text_field :title %>
    </div>
 
    <div class="field">Body<br>
    <%= f.text_area :body %>
    </div>
 
    <div class="actions"><%= f.submit %></div>
 
<% end %>

    <a>
		<%=link_to "Show", book_path(@book.id) %>
    </a>
    |
	<a>
		<%=link_to "Back", books_path %>
    </a>